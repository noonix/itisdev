<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F5">

    <!-- Main content vertical stack -->
    <LinearLayout
        android:id="@+id/center_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_marginBottom="80dp">

        <!-- Goal Question -->
        <TextView
            android:id="@+id/goal_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's your goal?"
            android:textColor="#2b2d42"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="60dp" />

        <!-- Subtext -->
        <TextView
            android:id="@+id/goal_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We will calculate daily calories according to your goal"
            android:textColor="#4a5759"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <!-- Activity buttons (Goal options) -->
        <TextView
            android:id="@+id/lose_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#edafb8"
            android:text="Lose weight"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginVertical="8dp"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp" />

        <TextView
            android:id="@+id/keep_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#f7c59f"
            android:text="Keep weight"
            android:textColor="#2b2d42"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginVertical="8dp"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp" />

        <TextView
            android:id="@+id/gain_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#b0c4b1"
            android:text="Gain weight"
            android:textColor="#2b2d42"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginVertical="8dp"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp" />
    </LinearLayout>

    <!-- Back Button -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="115dp"
        android:padding="5dp"
        android:text="Back"
        android:textColor="#4a5759"
        android:textSize="16sp" />

    <!-- Proceed Button -->
    <ImageButton
        android:id="@+id/proceed_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="98dp"
        android:background="@drawable/ellipse"
        android:elevation="6dp"
        android:src="@drawable/next_arrow"
        android:contentDescription="Proceed" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/nutritrack"
        android:contentDescription="NutriTrack Logo" />
</RelativeLayout>
