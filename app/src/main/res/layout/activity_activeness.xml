<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F5">

    <!-- Main content vertical stack -->
    <LinearLayout
        android:id="@+id/center_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_marginBottom="80dp">

        <!-- Question -->
        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How active are you?"
            android:textColor="#2b2d42"
            android:textSize="26sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="60dp" />

        <!-- Subtext -->
        <TextView
            android:id="@+id/subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A sedentary person burns fewer calories than an active person"
            android:textColor="#4a5759"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <!-- Activity buttons -->
        <TextView
            android:id="@+id/sedentary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_pink"
            android:text="Sedentary"
            android:textColor="#2b2d42"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginVertical="8dp"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp" />

        <TextView
            android:id="@+id/low_active_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_yellow"
            android:text="Low Active"
            android:textColor="#2b2d42"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginVertical="8dp"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp" />

        <TextView
            android:id="@+id/active_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_green"
            android:text="Active"
            android:textColor="#2b2d42"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginVertical="8dp"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp" />

        <TextView
            android:id="@+id/very_active_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_pale_green"
            android:text="Very Active"
            android:textColor="#2b2d42"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginVertical="8dp"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="35dp"
        android:padding="5dp"
        android:text="Back"
        android:textColor="#4a5759"
        android:textSize="16sp" />

    <!-- Proceed Button -->
    <ImageButton
        android:id="@+id/proceed_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ellipse"
        android:elevation="6dp"
        android:src="@drawable/next_arrow"
        android:contentDescription="Proceed" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/nutritrack"
        android:contentDescription="NutriTrack Logo" />
</RelativeLayout>
