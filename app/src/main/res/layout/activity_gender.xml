<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F5">

    <!-- Vertical Stack for Main Content -->
    <LinearLayout
        android:id="@+id/center_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_marginBottom="80dp">

        <!-- Question -->
        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whatâ€™s your gender?"
            android:textColor="#1b263b"
            android:textSize="26sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="60dp" />

        <!-- Subtext -->
        <TextView
            android:id="@+id/subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male bodies need more calories"
            android:textColor="#4a5759"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <!-- Male Button -->
        <TextView
            android:id="@+id/male_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_green"
            android:text="Male"
            android:textColor="#1b263b"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginVertical="8dp"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="16dp" />

        <!-- Female Button -->
        <TextView
            android:id="@+id/female_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_pink"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingVertical="14dp"
            android:text="Female"
            android:textColor="#1b263b"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Back Button -->
    <!-- Back Button -->

    <!-- Proceed Button -->

    <!-- Logo -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="87dp"
        android:padding="5dp"
        android:text="Back"
        android:textColor="#4a5759"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/proceed_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/ellipse"
        android:contentDescription="Proceed"
        android:elevation="6dp"
        android:src="@drawable/next_arrow" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"
        android:contentDescription="NutriTrack Logo"
        app:srcCompat="@drawable/nutritrack" />
</RelativeLayout>
